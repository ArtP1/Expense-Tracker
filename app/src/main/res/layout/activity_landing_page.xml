<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LandingPageActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="-49dp">

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:background="@color/lightgreen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/settingsImg"
        android:layout_width="23dp"
        android:layout_height="26dp"
        android:layout_marginTop="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/view2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.072"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.014"
        app:srcCompat="@drawable/settings_icon" />

    <ImageView
        android:id="@+id/notificationImg"
        android:layout_width="19dp"
        android:layout_height="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/view2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.931"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.118"
        app:srcCompat="@drawable/notification_icon" />

    <TextView
        android:id="@+id/stats1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TODAY IS"
        android:textColor="@color/lighttransp"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/view2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.114" />

    <TextView
        android:id="@+id/currentDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fri, 21 Jul"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/view2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stats1"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/stats4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="THIS MONTH'S SPEND"
        android:textColor="@color/lighttransp"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/view2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/currentDate"
        app:layout_constraintVertical_bias="0.195" />

    <!-- A way to group components -->

    <TextView
        android:id="@+id/monthsExpenses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/white"
        android:textSize="37sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/view2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stats4"
        app:layout_constraintVertical_bias="0.081" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_spending_wallet"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="visible"
        app:constraint_referenced_ids="spendingWallet,spendingWalletText,spendingWalletIcon,spendingWalletAmount," />

    <View
        android:id="@+id/spendingWallet"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/view2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view2"
        app:layout_constraintVertical_bias="0.36" />

    <TextView
        android:id="@+id/spendingWalletText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spending Wallet/Budget"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/spendingWallet"
        app:layout_constraintEnd_toEndOf="@+id/spendingWallet"
        app:layout_constraintHorizontal_bias="0.262"
        app:layout_constraintStart_toStartOf="@+id/spendingWallet"
        app:layout_constraintTop_toTopOf="@+id/spendingWallet"
        app:layout_constraintVertical_bias="0.483" />

    <ImageView
        android:id="@+id/spendingWalletIcon"
        android:layout_width="17.5dp"
        android:layout_height="17.5dp"
        app:layout_constraintBottom_toBottomOf="@+id/spendingWallet"
        app:layout_constraintEnd_toEndOf="@+id/spendingWallet"
        app:layout_constraintHorizontal_bias="0.071"
        app:layout_constraintStart_toStartOf="@+id/spendingWallet"
        app:layout_constraintTop_toTopOf="@+id/spendingWallet"
        app:layout_constraintVertical_bias="0.484"
        app:srcCompat="@drawable/green_wallet_icon" />

    <TextView
        android:id="@+id/spendingWalletAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$5,631.22"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/spendingWallet"
        app:layout_constraintEnd_toEndOf="@+id/spendingWallet"
        app:layout_constraintHorizontal_bias="0.874"
        app:layout_constraintStart_toStartOf="@+id/spendingWallet"
        app:layout_constraintTop_toTopOf="@+id/spendingWallet"
        app:layout_constraintVertical_bias="0.5" />


    <ImageView
        android:id="@+id/rightArrow"
        android:layout_width="9dp"
        android:layout_height="9dp"
        app:layout_constraintBottom_toBottomOf="@+id/spendingWallet"
        app:layout_constraintEnd_toEndOf="@+id/spendingWallet"
        app:layout_constraintHorizontal_bias="0.96"
        app:layout_constraintStart_toStartOf="@+id/spendingWallet"
        app:layout_constraintTop_toTopOf="@+id/spendingWallet"
        app:layout_constraintVertical_bias="0.5"
        app:srcCompat="@drawable/right_arrow_icon" />


    <TextView
        android:id="@+id/recentTransactionsText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="RECENT TRANSACTIONS"
        android:textColor="#bcbcbc"
        app:layout_constraintBottom_toTopOf="@+id/expensesRecyclerView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.118"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spendingWallet"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/recentTransactionsText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="See all.."
        android:textColor="@color/lightgreen"
        app:layout_constraintBottom_toTopOf="@+id/expensesRecyclerView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.914"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spendingWallet"
        app:layout_constraintVertical_bias="1.0" />


    <TextView
        android:id="@+id/emptyExpensesTextView"
        android:layout_width="350dp"
        android:layout_height="295dp"
        android:layout_marginTop="68dp"
        android:background="@color/white"
        android:elevation="2dp"
        android:gravity="center"
        android:text="@string/no_expenses"
        app:layout_constraintBottom_toTopOf="@+id/userNavbarWrapper"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spendingWallet"
        app:layout_constraintVertical_bias="0.294" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/expensesRecyclerView"
        android:layout_width="350dp"
        android:layout_height="320dp"
        android:background="@color/white"
        android:elevation="1dp"
        app:layout_constraintBottom_toTopOf="@+id/userNavbarWrapper"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spendingWallet"
        app:layout_constraintVertical_bias="0.623" />

    <LinearLayout
        android:id="@+id/userNavbarWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view2"
        app:layout_constraintVertical_bias="0.998">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/userNavbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            app:itemIconTint="@color/black"
            app:itemTextColor="@color/black"
            app:menu="@menu/users_bottom_nav" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>