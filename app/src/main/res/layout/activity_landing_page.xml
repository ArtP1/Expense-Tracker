<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LandingPageActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="-49dp">

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:background="@color/lightgreen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/settingsImg"
        android:layout_width="23dp"
        android:layout_height="26dp"
        android:layout_marginTop="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/view2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.072"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.014"
        app:srcCompat="@drawable/settings_icon" />

    <ImageView
        android:id="@+id/notificationImg"
        android:layout_width="19dp"
        android:layout_height="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/view2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.931"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.118"
        app:srcCompat="@drawable/notification_icon" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TODAY IS"
        android:textColor="@color/lighttransp"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/view2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.114" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fri, 21 Jul"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/view2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="THIS MONTH'S SPEND"
        android:textColor="@color/lighttransp"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/view2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.195" />

    <!-- A way to group components -->

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$313.31"
        android:textColor="@color/white"
        android:textSize="37sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/view2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.081" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_spending_wallet"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="visible"
        app:constraint_referenced_ids="spendingWallet,spendingWalletText,spendingWalletIcon,spendingWalletAmount," />

    <View
        android:id="@+id/spendingWallet"
        android:layout_width="357dp"
        android:layout_height="50dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/view2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view2" />

    <TextView
        android:id="@+id/spendingWalletText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spending Wallet"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/spendingWallet"
        app:layout_constraintEnd_toEndOf="@+id/spendingWallet"
        app:layout_constraintHorizontal_bias="0.262"
        app:layout_constraintStart_toStartOf="@+id/spendingWallet"
        app:layout_constraintTop_toTopOf="@+id/spendingWallet"
        app:layout_constraintVertical_bias="0.483" />

    <ImageView
        android:id="@+id/spendingWalletIcon"
        android:layout_width="17.5dp"
        android:layout_height="17.5dp"
        app:layout_constraintBottom_toBottomOf="@+id/spendingWallet"
        app:layout_constraintEnd_toEndOf="@+id/spendingWallet"
        app:layout_constraintHorizontal_bias="0.071"
        app:layout_constraintStart_toStartOf="@+id/spendingWallet"
        app:layout_constraintTop_toTopOf="@+id/spendingWallet"
        app:layout_constraintVertical_bias="0.484"
        app:srcCompat="@drawable/green_wallet_icon" />

    <TextView
        android:id="@+id/spendingWalletAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$5,631.22"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/spendingWallet"
        app:layout_constraintEnd_toEndOf="@+id/spendingWallet"
        app:layout_constraintHorizontal_bias="0.874"
        app:layout_constraintStart_toStartOf="@+id/spendingWallet"
        app:layout_constraintTop_toTopOf="@+id/spendingWallet"
        app:layout_constraintVertical_bias="0.5" />


    <ImageView
        android:id="@+id/rightArrow"
        android:layout_width="9dp"
        android:layout_height="9dp"
        app:layout_constraintBottom_toBottomOf="@+id/spendingWallet"
        app:layout_constraintEnd_toEndOf="@+id/spendingWallet"
        app:layout_constraintHorizontal_bias="0.96"
        app:layout_constraintStart_toStartOf="@+id/spendingWallet"
        app:layout_constraintTop_toTopOf="@+id/spendingWallet"
        app:layout_constraintVertical_bias="0.5"
        app:srcCompat="@drawable/right_arrow_icon" />

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="357dp"
        android:layout_height="275dp"
        android:elevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="414dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Transaction 1 -->

            <!-- Shadow line -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="48dp">

                <!-- Transaction details -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Transaction 1"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date: 2023-11-10"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Amount: $50.00"
                    android:textSize="14sp" />
            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0" /> <!-- Adjust the color as needed -->

            <!-- Transaction 2 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="48dp">

                <!-- Transaction details -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Transaction 2"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date: 2023-11-09"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Amount: $30.00"
                    android:textSize="14sp" />
            </androidx.cardview.widget.CardView>

            <!-- Add more transactions as needed -->

        </LinearLayout>
    </ScrollView>


    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="RECENT TRANSACTIONS"
        android:textColor="#bcbcbc"
        app:layout_constraintBottom_toTopOf="@+id/scrollView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.11"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spendingWallet"
        app:layout_constraintVertical_bias="0.714" />

    <LinearLayout
        android:id="@+id/bottomNavBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/homeBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/home_icon"
            android:background="?android:attr/selectableItemBackground"
            android:scaleType="centerInside"
            android:contentDescription="Home" />

        <ImageButton
            android:id="@+id/transactionsBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/home_icon"
            android:background="?android:attr/selectableItemBackground"
            android:scaleType="centerInside"
            android:contentDescription="Search" />

        <ImageButton
            android:id="@+id/plusBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/home_icon"
            android:background="?android:attr/selectableItemBackground"
            android:scaleType="centerInside"
            android:contentDescription="Profile" />

        <ImageButton
            android:id="@+id/walletBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/home_icon"
            android:background="?android:attr/selectableItemBackground"
            android:scaleType="centerInside"
            android:contentDescription="Settings" />

        <ImageButton
            android:id="@+id/accountBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/home_icon"
            android:background="?android:attr/selectableItemBackground"
            android:scaleType="centerInside"
            android:contentDescription="Settings" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="See all.."
        android:textColor="@color/lightgreen"
        app:layout_constraintBottom_toTopOf="@+id/scrollView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.925"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spendingWallet"
        app:layout_constraintVertical_bias="0.714" />
</androidx.constraintlayout.widget.ConstraintLayout>