<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <Space
        android:layout_width="match_parent"
        android:layout_height="16dp" />
    <!-- Change Password Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Change Password"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextOldPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="New Password"
        android:inputType="textPassword"
        android:padding="8dp" />

    <!-- Add appropriate spacing between sections -->

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switchBiometricAuth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Enable Biometric Authentication" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="16dp" />
    <!-- Edit Profile Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Edit Profile"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- EditTexts for Name, Email, etc. -->
    <!-- Modify appearance for better readability -->
    <EditText
        android:id="@+id/editTextFirstName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="First Name"
        android:inputType="textPassword"
        android:padding="8dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="16dp" />
    <!-- Similar modifications for other fields -->

    <!-- Currency Preference Section -->
    <!-- Use a dropdown menu for better selection -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Currency Preference"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinnerCurrency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp" />

    <!-- Add appropriate spacing -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="16dp" />

    <!-- Budget Management Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Budget Management"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextBudget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Set Budget"
        android:inputType="numberDecimal"
        android:padding="8dp" />

    <!-- Add appropriate spacing -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="16dp" />

    <!-- Notification Preferences Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Notification Preferences"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Checkboxes for Notification Options -->
    <CheckBox
        android:id="@+id/checkBoxNotifications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Enable Notifications" />

    <!-- Add appropriate spacing -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="45dp" />

    <!-- Button at the bottom -->
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/green_user_settings_btn"
        android:gravity="center"
        android:padding="12dp"
        android:text="Save Changes"
        android:textColor="@android:color/white" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/logOutBtn"
        android:background="@drawable/black_main_btn"
        android:gravity="center"
        android:padding="12dp"
        android:text="Log out"
        android:textColor="@android:color/white" />

</LinearLayout>

